extends partials/layout.pug

block content
  .heading
    h1 Register
    if msg
      h2= msg
  .login-form
    form(method='POST')
      .form-group
        label(for='email')
        input.form-control#email(
          type='email'
          name='email'
          placeholder='johnsnow@example.com'
          required
        )
      .form-group
        label(for='password') Password
        input.form-control#password(type='password' name='password' placeholder='********' required)
      .form-group
        label(for='password') Password Confirmation
        input.form-control#password(type='password' name='confirmation' placeholder='********' required)
      .contact-form__submit
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value='Register')
