extends partials/layout.pug

block content
  h1 Contact Us
  .contact-form
    form(method="POST")
      .form-group
        label(for='name') Name
        input.form-control#name(type='text' name='name' placeholder='John Snow')
      .form-group
        label(for='email') Email
        input.form-control#email(type='email' name='email' placeholder='johnsnow@example.com')
      .form-group
        label(for='phone') Phone
        input.form-control#phone(type='tel' name='phone' placeholder='999-999-9999')
      .form-group
        label(for='message') Message
        textarea.form-control#message(name='message' rows=5 placeholder='Enter your message here...')
      .contact-form__submit
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value='Submit')
